.top {
  height: 250px;
}
.top>.back {
  width: 10px;
  height: 10px;
  border-left: 1px solid #fff;
  border-top: 1px solid #fff;
  transform: rotate(-45deg);
  position: absolute;
  top: 13px;
  left: 13px;
}
.top>image:first-child {
  width: 100%;
  height: 250px;
  background-size: 100% 250px;
  position: fixed;
  z-index: -1;
}
.top>image {
  width: 100px;
  height: 106px;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.top>.work {
  position: absolute;
  transform: translateX(-50%);
  bottom: 50px;
  left: 50%;
  top: 150px;
  color: #fff;
  font-size: 14px;
}
.top>.content {
  position: absolute;
  bottom: 30px;
  transform: translateX(-50%);
  left: 50%;
  top: 180px;
  color: #fff;
  font-size: 12px;
}
.top>.two {
  top: 30px;
}
.tab {
  display: flex;
}
.tab_item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tab_item>image {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.tab_item>view {
  font-size: 16px;
}
.tab_item>text {
  font-size: 16px;
  color: #999;
}
.qian {
  width: 8px;
  height: 8px;
  border-right: 1px solid #999999;
  border-bottom: 1px solid #999999;
  transform: rotate(-45deg);
  margin: 15px 0;
}
.task {
  margin-top: 30px;
  padding: 0 20px;
}
.task_item {
  display: flex;
  height: 40px;
  line-height: 40px;
  
}
.task_item>.right {
  border-bottom: 1px solid #DDDDDD;
  display: flex;
  justify-content: space-between;
  height: 40px;
  line-height: 40px;
  width: 100%;
  padding-right: 25px;
}
.task_item:last-child>.right {
  border: 0;
}
.task_item>image {
  width: 20px;
  height: 20px;
  margin: 10px auto;
  margin-right: 10px;
}
.right>text {
  font-size: 16px;
}
