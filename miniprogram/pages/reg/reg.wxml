<view class='top'>
  <view class='back'></view>
  <view class='title'>提交资料入驻</view>
</view>

<view class='box'>
  <view class='tip'>
    <image src='../../images/shu.png'></image>
    <view>请填写信息注册</view>
  </view>
  <view class='item'>
    <label>头像/logo:</label>
    <view class='circle'></view>
  </view>
  <view class='item'>
    <label>公 司 名：</label>
    <input type='text' placeholder='中软国际科技（非个人必填项）' placeholder-class='placeholder' />
  </view>
  <view class='item'>
    <label>主 营 业 务：</label>
    <input type='text' placeholder='it技术服务（非个人必填项）' />
  </view>
  <view class='item'>
    <label>所 在 地：</label>
    <view class='la'>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
      <view class="picker">
        {{array[index]}}
      </view>
      </picker>
    <view class='xia'></view>
    </view>
    
  </view>
  <view class='item'>
    <label>联 系 人：</label>
    <input type='text' placeholder='it技术服务' placeholder-class='placeholder' />
  </view>
  <view class='item'>
    <label>联系电话：</label>
    <input type='text' placeholder='138xxxxxxxx' placeholder-class='placeholder' />
  </view>
  <view class='item'>
    <label>验证码：</label>
    <view class='r'>
      <input type='text' placeholder='请输入6位数验证码' placeholder-class='placeholder' />
      <view class='get'>获取验证码</view>
    </view>
  </view>
  <view class='item'>
    <label>服务范围：</label>
    <input type='text' placeholder='填写擅长领域或者工种任务' placeholder-class='placeholder' />
  </view>
  <button>下一步</button>
</view>